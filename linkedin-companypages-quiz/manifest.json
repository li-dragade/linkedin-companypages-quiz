{
  "name": "linkedin-companypages-quiz",
  "version": "1.0",
  "description": "quiz for linkedin company pages",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "*://*.linkedin.com/company/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "quiz.html"
  },
"content_scripts": [
  {
  "matches": ["*://*.linkedin.com/company/*"],
  "js": ["contentscript.js"]
  }
],  
  "manifest_version": 2
}
